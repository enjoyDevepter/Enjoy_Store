<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6px"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                app:layout_auto_baseheight="width">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="70px"
                    android:layout_marginTop="70px"
                    app:layout_auto_baseheight="width">

                    <LinearLayout
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/step_phone_layout"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:background="@drawable/register_current_step"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_auto_baseheight="width">

                            <View
                                android:id="@+id/step_phone"
                                android:layout_width="24px"
                                android:layout_height="32px"
                                android:layout_gravity="center"
                                android:background="@mipmap/reg_phone"
                                app:layout_auto_baseheight="width" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24px"
                            android:text="验证手机"
                            android:textColor="#FF333333"
                            android:textSize="24px" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/step_name_layout"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:background="@drawable/register_last_step"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_auto_baseheight="width">

                            <View
                                android:id="@+id/step_name"
                                android:layout_width="32px"
                                android:layout_height="32px"
                                android:layout_gravity="center"
                                android:background="@mipmap/reg_name_unfinished"
                                app:layout_auto_baseheight="width" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24px"
                            android:text="填写会员信息"
                            android:textColor="#FF333333"
                            android:textSize="24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/step_last_layout"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:background="@drawable/register_last_step"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_auto_baseheight="width">

                            <View
                                android:id="@+id/step_last"
                                android:layout_width="32px"
                                android:layout_height="32px"
                                android:layout_gravity="center"
                                android:background="@mipmap/reg_unfinished"
                                app:layout_auto_baseheight="width" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24px"
                            android:text="注册完成"
                            android:textColor="#FF333333"
                            android:textSize="24px" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="33px"
                        android:layout_toLeftOf="@id/two"
                        android:layout_toRightOf="@id/one"
                        android:background="#FFE0E0E0" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="33px"
                        android:layout_toLeftOf="@id/three"
                        android:layout_toRightOf="@id/two"
                        android:background="#FFE0E0E0" />
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/oneStep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15px"
                        android:layout_marginTop="15px"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <EditText
                                    android:id="@+id/username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="请输入手机号"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:textColor="#FF666666"
                                    android:textSize="26px" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:layout_marginTop="18px"
                                android:background="#FFDBDBDB" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/byPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/validate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="请输入验证码"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="4"
                                android:singleLine="true"
                                android:textColor="#FF666666"
                                android:textSize="26px" />

                            <TextView
                                android:id="@+id/get_validate"
                                android:layout_width="160px"
                                android:layout_height="40px"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="获取验证码"
                                android:textColor="#FF50C8F5"
                                android:textSize="26px" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginTop="18px"
                            android:background="#FFDBDBDB" />

                        <TextView
                            android:id="@+id/register"
                            android:layout_width="match_parent"
                            android:layout_height="82px"
                            android:layout_marginBottom="30px"
                            android:layout_marginTop="70px"
                            android:background="@drawable/reg_btn"
                            android:gravity="center"
                            android:text="注册"
                            android:textColor="@color/white"
                            android:textSize="28px"
                            app:layout_auto_baseheight="width" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100px"
                            android:text="手机号已被注册，请换号重新注册！"
                            android:textColor="#FF666666"
                            android:textSize="24px" />


                        <TextView
                            android:id="@+id/info_btn"
                            android:layout_width="300px"
                            android:layout_height="82px"
                            android:layout_marginBottom="30px"
                            android:layout_marginTop="70px"
                            android:background="@drawable/reg_btn"
                            android:gravity="center"
                            android:text="重新注册"
                            android:textColor="@color/white"
                            android:textSize="28px"
                            app:layout_auto_baseheight="width" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twoStep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100px"
                                android:layout_height="wrap_content"
                                android:text="会员名"
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />

                            <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="54px"
                                android:layout_marginLeft="40px"
                                android:background="@drawable/reg_input_bg"
                                android:hint="请输入会员号"
                                android:paddingLeft="15px"
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100px"
                                android:layout_height="wrap_content"
                                android:text="姓名    "
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />

                            <EditText
                                android:id="@+id/realName"
                                android:layout_width="match_parent"
                                android:layout_height="54px"
                                android:layout_marginLeft="40px"
                                android:background="@drawable/reg_input_bg"
                                android:hint="请输入姓名"
                                android:paddingLeft="15px"
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100px"
                                android:layout_height="wrap_content"
                                android:text="性别    "
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40px"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/male_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <View
                                        android:id="@+id/male"
                                        android:layout_width="24px"
                                        android:layout_height="24px"
                                        android:layout_marginRight="16px"
                                        android:background="@drawable/check_bg"
                                        app:layout_auto_baseheight="width" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="男"
                                        android:textColor="#FF666666"
                                        android:textSize="26px" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/female_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <View
                                        android:id="@+id/female"
                                        android:layout_width="24px"
                                        android:layout_height="24px"
                                        android:layout_marginLeft="30px"
                                        android:layout_marginRight="16px"
                                        android:background="@drawable/check_bg"
                                        app:layout_auto_baseheight="width" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="女"
                                        android:textColor="#FF666666"
                                        android:textSize="26px" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100px"
                                android:layout_height="wrap_content"
                                android:text="生日    "
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />

                            <TextView
                                android:id="@+id/birth"
                                android:layout_width="match_parent"
                                android:layout_height="54px"
                                android:layout_marginLeft="40px"
                                android:background="@drawable/reg_input_bg"
                                android:gravity="center_vertical"
                                android:paddingLeft="15px"
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/invite_layout"
                                android:layout_width="120px"
                                android:layout_height="wrap_content"
                                android:background="@drawable/invite_bg"
                                android:drawableRight="@mipmap/drop_down_icon"
                                android:padding="10px"
                                android:text="邀请码"
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />

                            <EditText
                                android:id="@+id/invite"
                                android:layout_width="match_parent"
                                android:layout_height="54px"
                                android:layout_marginLeft="20px"
                                android:background="@drawable/reg_input_bg"
                                android:hint="请输入邀请码"
                                android:paddingLeft="15px"
                                android:textColor="#FF666666"
                                android:textSize="26px"
                                app:layout_auto_baseheight="width" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="66px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="40px"
                            android:layout_marginTop="40px"
                            app:layout_auto_baseheight="width">

                            <TextView
                                android:id="@+id/prev"
                                android:layout_width="250px"
                                android:layout_height="66px"
                                android:background="@drawable/reg_btn"
                                android:gravity="center"
                                android:text="上一步"
                                android:textColor="@color/white"
                                android:textSize="28px"
                                app:layout_auto_baseheight="width" />

                            <TextView
                                android:id="@+id/next"
                                android:layout_width="250px"
                                android:layout_height="66px"
                                android:layout_marginLeft="40px"
                                android:background="@drawable/reg_btn"
                                android:gravity="center"
                                android:text="下一步"
                                android:textColor="@color/white"
                                android:textSize="28px"
                                app:layout_auto_baseheight="width" />

                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/mask_invite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88888888"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/inviteTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80px"
                android:visibility="gone" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mask_birth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88888888"
            android:visibility="gone">

            <DatePicker
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80px"
                android:background="@color/white"
                android:visibility="gone" />

            <View
                android:id="@+id/close"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignRight="@id/time"
                android:layout_alignTop="@id/time"
                android:layout_marginRight="-15px"
                android:layout_marginTop="-15px"
                android:background="@mipmap/close_black"
                app:layout_auto_baseheight="width" />

        </RelativeLayout>
    </FrameLayout>


</LinearLayout>