<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12px">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="84px">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/goodsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none" />

                <LinearLayout
                    android:id="@+id/no_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="188px"
                        android:layout_height="120px"
                        android:layout_marginTop="60px"
                        android:background="@mipmap/nodata"
                        app:layout_auto_baseheight="width" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60px"
                        android:text="暂无数据"
                        android:textColor="#FF666666"
                        android:textSize="26px" />

                </LinearLayout>
            </FrameLayout>


        </android.support.v4.widget.SwipeRefreshLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="84px"
            android:orientation="vertical">

            <View
                android:id="@+id/mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88888888"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/filter_layout"
                android:layout_width="match_parent"
                android:layout_height="320px"
                android:orientation="horizontal"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/secondCategory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFF0F0F0" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/thirdCategory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white" />

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84px"
            android:background="@drawable/list_item_bg"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/type_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="全部商品"
                    android:textColor="#FF333333"
                    android:textSize="26px" />

                <View
                    android:id="@+id/type_status"
                    android:layout_width="22px"
                    android:layout_height="12px"
                    android:layout_marginLeft="8px"
                    android:background="@mipmap/arrow_down"
                    app:layout_auto_baseheight="width" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="销量"
                    android:textColor="#FF333333"
                    android:textSize="26px" />

                <View
                    android:id="@+id/sale_status"
                    android:layout_width="22px"
                    android:layout_height="12px"
                    android:layout_marginLeft="8px"
                    android:background="@mipmap/arrow_down"
                    app:layout_auto_baseheight="width" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="价格"
                    android:textColor="#FF333333"
                    android:textSize="26px" />

                <View
                    android:id="@+id/price_status"
                    android:layout_width="22px"
                    android:layout_height="12px"
                    android:layout_marginLeft="8px"
                    android:background="@mipmap/arrow_down"
                    app:layout_auto_baseheight="width" />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
</LinearLayout>