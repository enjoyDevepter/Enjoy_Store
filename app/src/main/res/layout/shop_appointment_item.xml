<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_center_bg"
    android:orientation="vertical"
    app:layout_anchorGravity="center_horizontal">

    <View style="@style/divider_1"/>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:background="#F5F5F5"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25px"
        android:paddingRight="29px">

        <TextView
            style="@style/recycler_item_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单号："
            app:layout_auto_baseheight="width" />

        <TextView
            android:id="@+id/order_id"
            style="@style/recycler_item_style"
            android:layout_width="0dp"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:layout_auto_baseheight="width" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/info"
                android:text="详细"
                style="@style/btn_in_list"
                />

            <TextView
                android:id="@+id/related"
                android:text="关联"
                style="@style/btn_in_list"
                />

            <TextView
                android:id="@+id/cancel"
                android:text="取消"
                style="@style/btn_in_list"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/order_list_title_back"
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25px"
        android:paddingRight="29px">


        <TextView
            android:id="@+id/order_project"
            style="@style/recycler_item_style"
            android:layout_width="0dp"
            android:text="项目"
            android:layout_marginTop="14px"
            android:maxLines="2"
            android:layout_marginBottom="14px"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_marginLeft="20px"
            android:id="@+id/order_phone"
            android:text="手机"
            style="@style/recycler_item_style"
            android:layout_width="146px"
            android:layout_height="match_parent"
            app:layout_auto_baseheight="width"
            />

        <TextView
            app:layout_auto_baseheight="width"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:text="关联"
            style="@style/recycler_item_style"
            android:layout_marginLeft="5px"
            android:id="@+id/order_related"
            />

        <TextView
            android:id="@+id/order_status"
            style="@style/recycler_item_style"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:text="未支付"
            android:layout_marginLeft="5px"
            app:layout_auto_baseheight="width" />


        <TextView
            android:id="@+id/order_time"
            android:text="预约时间"
            android:layout_marginLeft="5px"
            style="@style/recycler_item_style"
            android:layout_width="120px"
            android:layout_height="match_parent"
            app:layout_auto_baseheight="width" />

    </LinearLayout>


    <View style="@style/divider_1"/>
</LinearLayout>