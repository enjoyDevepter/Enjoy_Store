<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@mipmap/login_logo_bg">

        <View
            android:layout_width="142px"
            android:layout_height="142px"
            android:layout_gravity="center"
            android:background="@mipmap/login_logo"
            app:layout_auto_baseheight="width" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="33px"
                    android:layout_height="36px"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/user"
                    app:layout_auto_baseheight="width" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21px"
                    android:background="@android:color/transparent"
                    android:hint="请输入账号"
                    android:imeOptions="actionNext"
                    android:text="D00000001"
                    android:textSize="28px" />

            </LinearLayout>

            <View
                android:layout_width="500px"
                android:layout_height="2px"
                android:layout_marginLeft="48px"
                android:layout_marginTop="25px"
                android:background="#FFCCCCCC"
                app:layout_auto_baseheight="width" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44px"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/byUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="38px"
                    android:layout_height="42px"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/password"
                    app:layout_auto_baseheight="width" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:background="@android:color/transparent"
                    android:hint="请输入密码"
                    android:imeOptions="actionDone"
                    android:text="123456"
                    android:textSize="28px" />

            </LinearLayout>

            <View
                android:layout_width="500px"
                android:layout_height="2px"
                android:layout_marginLeft="48px"
                android:layout_marginTop="25px"
                android:background="#FFCCCCCC"
                app:layout_auto_baseheight="width" />

        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="548px"
            android:layout_height="82px"
            android:layout_marginTop="75px"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="#FFFFFFFF"
            android:textSize="34px"
            app:layout_auto_baseheight="width" />

    </LinearLayout>
</LinearLayout>