<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6px"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="22px"
            android:background="@drawable/change_password_et"
            android:hint="原密码"
            android:inputType="textPassword"
            android:paddingLeft="10px"
            android:textColor="#ffa3a3a3"
            android:textSize="24px" />


        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:background="@drawable/change_password_et"
            android:hint="新密码"
            android:inputType="textPassword"
            android:paddingLeft="10px"
            android:textColor="#ffa3a3a3"
            android:textSize="24px" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginBottom="22px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="10px"
            android:background="@drawable/change_password_et"
            android:hint="重复密码"
            android:inputType="textPassword"
            android:paddingLeft="10px"
            android:textColor="#ffa3a3a3"
            android:textSize="24px" />

        <View style="@style/divider_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18px"
            android:layout_marginTop="16px"
            android:gravity="center_vertical"
            android:paddingLeft="24px"
            android:text="密码由6-20位英文字母、数字或符号组成"
            android:textColor="#ff979797"
            android:textSize="24px" />
    </LinearLayout>

    <TextView
        android:id="@+id/make_sure_btn"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="34px"
        android:background="@drawable/make_sure_btn"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="24px" />
</LinearLayout>