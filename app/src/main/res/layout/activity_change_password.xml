<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/change_password_et"
            android:hint="原密码"
            android:paddingLeft="5dp"
            android:textColor="#ffa3a3a3"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/change_password_et"
            android:hint="新密码"
            android:paddingLeft="5dp"
            android:textColor="#ffa3a3a3"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/change_password_et"
            android:hint="重复密码"
            android:paddingLeft="5dp"
            android:textColor="#ffa3a3a3"
            android:textSize="12sp" />

        <View style="@style/divider_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="密码由6-20位英文字母、数字或符号组成"
            android:textColor="#ff979797"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/make_sure_btn"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/make_sure_btn"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="12sp" />
</LinearLayout>