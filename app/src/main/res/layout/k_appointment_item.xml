<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_center_bg"
    android:orientation="vertical"
    app:layout_anchorGravity="center_horizontal">

    <View style="@style/divider_1" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25px"
        android:paddingRight="29px"
        android:visibility="gone">

        <TextView
            style="@style/recycler_item_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单号："
            app:layout_auto_baseheight="width" />

        <TextView
            android:id="@+id/order_id"
            style="@style/recycler_item_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_auto_baseheight="width" />

        <TextView
            android:id="@+id/statusDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="#FF0096FF"
            android:textSize="22px"
            app:layout_auto_baseheight="width" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/info"
                style="@style/btn_in_list"
                android:text="详细" />

            <TextView
                android:id="@+id/ok"
                style="@style/btn_in_list"
                android:text="确定" />

            <TextView
                android:id="@+id/change"
                style="@style/btn_in_list"
                android:text="改约" />

            <TextView
                android:id="@+id/cancel"
                style="@style/btn_in_list"
                android:text="取消" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_list_title_back"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25px"
        android:paddingRight="25px">


        <TextView
            android:id="@+id/order_project"
            style="@style/recycler_item_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="14px"
            android:layout_marginTop="14px"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="项目" />

        <TextView
            android:id="@+id/order_phone"
            style="@style/recycler_item_style"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:text="手机"
            app:layout_auto_baseheight="width" />


        <TextView
            android:id="@+id/count"
            style="@style/recycler_item_style"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:text="总次数"
            app:layout_auto_baseheight="width" />


        <TextView
            android:id="@+id/surplusNum"
            style="@style/recycler_item_style"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:text="剩余次数"
            app:layout_auto_baseheight="width" />

        <TextView
            android:id="@+id/time"
            style="@style/recycler_item_style"
            android:layout_width="230px"
            android:layout_height="match_parent"
            android:text="时间"
            app:layout_auto_baseheight="width" />

    </LinearLayout>


    <View style="@style/divider_1" />
</LinearLayout>
