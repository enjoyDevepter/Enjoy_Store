<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <View
        android:layout_marginTop="57px"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/pay_error_dialog_icon"
        android:layout_width="71px"
        android:layout_height="59px" />

    <TextView
        android:id="@+id/content"
        android:layout_marginTop="29px"
        android:layout_width="wrap_content"
        android:textSize="28px"
        android:textColor="#000000"
        android:layout_height="wrap_content" />
    
    <View 
        android:layout_width="424px"
        android:layout_height="1px"
        android:layout_marginTop="49px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginBottom="30px"
        style="@style/divider_1"/>
    
    <TextView
        android:id="@+id/close"
        android:background="@drawable/buy_btn"
        android:textSize="20px"
        android:textColor="@android:color/white"
        android:text="关闭"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="38px"
        android:layout_width="166px"
        android:layout_height="43px" />
    
</LinearLayout>