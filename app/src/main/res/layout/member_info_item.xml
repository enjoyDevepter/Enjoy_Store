<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="36px"
        android:layout_marginBottom="36px"
        android:layout_marginLeft="36px"
        android:layout_width="91px"
        android:layout_height="91px" />

    <TextView
        android:id="@+id/name"
        android:textColor="#ff676767"
        android:textSize="28px"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="20px"
        android:text="name"
        android:layout_alignTop="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/phone"
        android:textColor="#ff676767"
        android:textSize="26px"
        android:text="1111"
        android:layout_below="@id/name"
        android:layout_marginTop="10px"
        android:layout_alignLeft="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="26px"
        android:text="私信"
        android:gravity="center"
        android:id="@+id/btn"
        android:textColor="#ff676767"
        android:layout_below="@id/phone"
        android:layout_marginTop="10px"
        android:layout_marginBottom="7px"
        android:layout_alignLeft="@id/name"
        android:background="@drawable/member_info_item_btn_back"
        android:layout_width="115px"
        android:layout_height="36px" />

</RelativeLayout>